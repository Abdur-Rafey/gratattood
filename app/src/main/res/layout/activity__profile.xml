<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="0.92">

            <ImageView
                android:id="@+id/backArrow_Message_Activity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                 android:contentDescription="@null"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/ic_navigation_left_from_media_chooser_header_bar"
                 />


            <TextView
                android:id="@+id/title_textView_toolbar_MediaChooser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="8dp"
                android:layout_toRightOf="@id/backArrow_Message_Activity"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Profile"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        >

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/profile_pic"
                android:src="@drawable/pic_6"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
               >
            </ImageView>
        </android.support.v7.widget.CardView>
      <!--  <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/profile_pic"
            android:src="@drawable/pic_6"


            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingRight="5dp"
            android:layout_toRightOf="@id/view2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tattoos"
                android:gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Followers"
                android:gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Following"
                android:gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="25dp"
            android:paddingRight="5dp"
            android:layout_toRightOf="@id/view2"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="34"
               android:gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1.33"
                android:gravity="center_horizontal"
                android:text="77"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.71"
                android:text="52"
                android:gravity="center_horizontal"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/view2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="2dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Follow"
                android:background="@color/colorWhite"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2"

    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/user_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="DR.COYASS"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/Description_profile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15dp"
        android:text="DDS,PH.D"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textColor="@color/colorWhite" />

</LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/colorPrimary"
        app:elevation="0dp"
        app:menu="@menu/profile_navigation" />

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp">

    </GridView>

</LinearLayout>
