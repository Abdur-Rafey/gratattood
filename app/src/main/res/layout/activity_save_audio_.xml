<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gratattood.gratattood.SaveAudio_Activity"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:src="@drawable/delete_btn"
                android:scaleType="fitCenter"


                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/more"
                android:entries="@array/spinner_options"
                android:gravity="right"
                android:prompt="@string/spinner" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Name"
            android:textSize="15dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:hint="August,8 2017"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/colorWhite"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="File properties"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="WAV,44100 HZ"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="721 KB,00.08"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_6"
android:layout_marginTop="3dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@color/colorblue"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post-Save Actions"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginLeft="65dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/play_green"/>
        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:layout_marginLeft="25dp"
            android:textColor="@color/colorGrey"
            android:textSize="20dp"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/share_green"/>
            <Switch
                android:id="@+id/switchShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorGrey"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            android:id="@+id/card_view1"
            app:cardCornerRadius="25dp"
            android:innerRadius="0dp"
            android:shape="ring"
            cardBackgroundColor="@android:color/white"
            android:thicknessRatio="1.9"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#f1b10e"
                android:layout_gravity="center"
                android:src="@drawable/tick"
                />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>